@{
}

<h1>Ingredients</h1>

<p>Here are the registered ingredients so far.</p>

@foreach (Ingredients ingredients in Model)
{
    <p>@ingredients.Name 
        <a href="/Ingredients/Show/@ingredients.Id">Show</a>
        <form action="/Ingredients/Delete/@ingredients.Id" method="post">
            <button>Delete</button>    
        </form>   
    </p>
}


<p><a href="/Ingredients/Create/">Create ingredient</a></p>